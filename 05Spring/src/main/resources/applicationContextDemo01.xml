<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--配置bean-->
    <bean id="personZhang" class="demo01.Person">
        <!--配置类中的属性-->
        <property name="name" value="张嘎"></property>
        <property name="words" value="三天不打鬼，手都痒痒"></property>
    </bean>
    <bean id="personRod" class="demo01.Person">
        <!--配置类中的属性-->
        <property name="name" value="Rod"></property>
        <property name="words" value="世界上有10种人，认识二进制的和不认识二进制的"></property>
    </bean>
</beans>